# {{ ansible_managed }}

---
version: '2.2'

services:
  gitlab-runner:
    image: "{{ docker_gitlab_runner_docker_image }}"
    container_name: "{{ docker_gitlab_runner_container_name }}"
    restart: unless-stopped
    environment:
      TZ: {{ timezone_name }}
    volumes:
      - {{ docker_gitlab_runner_conf_dir }}:/etc/gitlab-runner
{% for v in docker_gitlab_extra_volumes %}
      - {{ v }}
{% endfor %}
    logging:
      driver: "json-file"
      options:
        max-size: "8m"
